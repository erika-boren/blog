
  <div class="container col-sm-2 col-md-2 col-lg-2">
    <div class="tag-list text-center">
      <ul>
        <% @tags.each do |tag| %>
        <li class="text-center"><%= link_to tag.name, tag_path(tag.name) %></li>
        <% end %>
      </ul>
    </div>
  </div>

<div class="container">

  <div class="col-sm-10 col-xs-12 posts-home">
    <% @posts.each do |post| %>
    <div class="col-xs-12 text-center">
      <div class="text-center post-title-link">
        <h2><%= link_to post.title, post_path(post) %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y')%></h6>
      </div>
      <div>
        <%= raw(post.body) %>

      </div>
      <% if user_signed_in? %>
        <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
      <hr />
    </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>